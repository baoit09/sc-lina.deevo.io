<script>   

	$('.btn-edit').click(function(){

		var name= $('.row-'+$(this).attr('id')).find('.name').text();
		var locaton= $('.row-'+$(this).attr('id')).find('.location').text();
		var content=$('.row-'+$(this).attr('id')).find('.input-content').val();
		var id= $('.row-'+$(this).attr('id')).find('.id').text();
		
		$("#myModal").modal();
		$('#form-post').attr('action','/logistic/action?_method=put');

		$("#iditem").css("display", "block");

		$("#id_item").val(id);
		$("#name_item").val(name);
		$("#location_item").val(locaton);

		try{
			var objcontent=JSON.parse(content);

			$("input[name='general_val']").each(function(index){
				$(this).val(Object.values(objcontent)[index]);
			});

			$("input[name='lable_val']").each(function(index){
				$(this).val(Object.values(objcontent['Lable'])[index]);
			});
		}catch(error){
			$("input[name='general_val']").val('');
			$("input[name='lable_val']").val('');
		}
    });

