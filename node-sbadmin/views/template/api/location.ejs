<script>    

	$('.btn-edit').click(function(){
		var id=$('.row-'+$(this).attr('id')).find('.row-id').text();
        var name=$('.row-'+$(this).attr('id')).find('.row-name').text();
        var parent=$('.row-'+$(this).attr('id')).find('.row-parent').text();
		var content=$('.row-'+$(this).attr('id')).find('.row-content').text();
		var parseJS=JSON.parse(content);
		var objcontent=JSON.parse(parseJS);
		
		$("#myModal").modal();
        $('#form-post').attr('action','/location/action?_method=put');
		
        $( "input[name='id_item']" ).val(id);
        $( "input[name='name_item']" ).val(name);
        $( "input[name='parent_item']" ).val(parent);

		var cont=objcontent['Contact'];
			$('#contact_name').val(cont['Full-Name']);
			$('#contact_email').val(cont['Email']);
			$('#contact_phone').val(cont['Phone']);
			$('#contact_role').val(cont['Role']);
			$('#contact_account').val(cont['DEEVO-Account']);

		$("input[name='general_val']").each(function(index){
			$(this).val(Object.values(objcontent)[index]);
		});

		var locat=objcontent['Location'];
			$('#us2-lon').val(locat['Longitude']);
			$('#us2-lat').val(locat['Latitude']);
			
    });

    $('#btn-addnew').click(function(){
        $('#form-post').attr('action','/location/action');
        $( "input[name='id_item']" ).val('');
        $( "input[name='name_item']" ).val('');
        $( "input[name='parent_item']" ).val('');
		$("input[name='contact_val']").val('');
		$("input[name='general_val']").val('');
		$("input[name='location_val']").val('');
	
	});

	function insert_general(key,val){
	
		var row_id=$('#tbl-general>tbody>tr.general-rows').length+1;

		var html='<tr class="general-rows general-'+row_id+'">';
			html+='<th width="200px" class="co-th "> <input onchange="" class="form-control box-co" name="general_key" value="'+key+'"></th>';
			html+='<th class="co-th"> <input class="form-control box-co" name="general_val" value="'+val+'"></th>';
			html+='<th width="7px" class="co-th mybutton"><button type="button" onclick="del_general('+row_id+')" class="btn btn-warning mybutton del_general"><i class="fa fa-minus"></i></button></th>';
			html+='</tr>';

	  $(html).insertBefore( ".end_general" );
	
	};
	
	function del_general(id){
		
	  var i=1;

	  $('.general-'+id).remove();

	  $('#tbl-general>tbody>tr.general-rows').each(function(){
		var z=i++;
		$(this).attr('class','general-rows general-'+z);
		$(this).find('.del_general').attr('onclick','del_general('+(z)+')');
	  });

	};

	$('.add_general').on('click',function() {
		var key='';
		var val='';
		insert_general(key,val);

	});
	

	function getLocation() {
		if (navigator.geolocation) {
			navigator.geolocation.getCurrentPosition(showPosition);
		} else { 
			alert("Geolocation is not supported by this browser.");
		}
	}

	function showPosition(position) {
		alert("Geolocation is not supported by this browser.");
		$('#location_longitude').val(position.coords.longitude);
		$('#location_latitude').val(position.coords.latitude);
	}
		
	function xoa_dau(str) {
		str = str.replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g, "a");
		str = str.replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ/g, "e");
		str = str.replace(/ì|í|ị|ỉ|ĩ/g, "i");
		str = str.replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ/g, "o");
		str = str.replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g, "u");
		str = str.replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y");
		str = str.replace(/đ/g, "d");
		str = str.replace(/À|Á|Ạ|Ả|Ã|Â|Ầ|Ấ|Ậ|Ẩ|Ẫ|Ă|Ằ|Ắ|Ặ|Ẳ|Ẵ/g, "A");
		str = str.replace(/È|É|Ẹ|Ẻ|Ẽ|Ê|Ề|Ế|Ệ|Ể|Ễ/g, "E");
		str = str.replace(/Ì|Í|Ị|Ỉ|Ĩ/g, "I");
		str = str.replace(/Ò|Ó|Ọ|Ỏ|Õ|Ô|Ồ|Ố|Ộ|Ổ|Ỗ|Ơ|Ờ|Ớ|Ợ|Ở|Ỡ/g, "O");
		str = str.replace(/Ù|Ú|Ụ|Ủ|Ũ|Ư|Ừ|Ứ|Ự|Ử|Ữ/g, "U");
		str = str.replace(/Ỳ|Ý|Ỵ|Ỷ|Ỹ/g, "Y");
		str = str.replace(/Đ/g, "D");
		return str;
	}

