<script>    

	$('#btn-search').click(function(){
		var keyseach=  $( "input[name='orgid_key']" ).val();
		var valueseach=  $( "select[name='type_search']" ).val();
		if(valueseach==1){
			$.ajax({
				url:'/products/ajaxlogs',
				type: "POST",
				data:{
					keyseach:keyseach
				},
				success:function(response){
					$("#myModal").modal()
					$('.modal-dialog').html(response);
				},
				error:function(error){
					console.log(error);
				}
			});
		}else{
			$('#form-search').submit()
		}
	});
	
	$('.btn-edit').click(function(){
		
		var id=$('.row-'+$(this).attr('id')).find('.row-id').text();
        var name=$('.row-'+$(this).attr('id')).find('.row-name').text();
        var parent=$('.row-'+$(this).attr('id')).find('.row-parent').text();
		var content=$('.row-'+$(this).attr('id')).find('.row-content').text();
		var parseJS=JSON.parse(content);
		var objcontent=JSON.parse(parseJS);
		
		$.ajax({
			url:"/product/ajaxproduct",
			type: "POST",
			data:{
				action:"/product/action?_method=put",
				id:id,
				name:name,
				parent:parent,
				content:JSON.stringify(objcontent)
			},
			success:function(response){
				$('.modal-dialog').html(response);
			},
			error:function(error){
				console.log(error)
			}
		})

    });

