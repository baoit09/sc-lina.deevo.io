	$('#type_search').change(function(){
		var str=$(this).val();
		if(str==0){
			$('.orgid_key').prop('disabled', false);
		}else{
			$('.orgid_key').prop('disabled', true);
		};
	});

	$('.btn-edit').click(function(){

		var obj_input={
			time: $('.row-'+$(this).attr('id')).find('.time').text(),
			auditor: $('.row-'+$(this).attr('id')).find('.auditor').text(),
			location: $('.row-'+$(this).attr('id')).find('.location').text(),
			obj: $('.row-'+$(this).attr('id')).find('.product').text(),
		}

		var id= $('.row-'+$(this).attr('id')).find('.id').text();
		var content=$('.row-'+$(this).attr('id')).find('.input-content').val();

			$("#myModal").modal();
			$('#form-post').attr('action','/audit-action/action?_method=put');
			$( "#iditem" ).css("display", "block");
			$( "input[name='id_item']" ).val(id);

			$( ".gr-1" ).each(function(index){
				$(this).val(Object.values(obj_input)[index]);
			});

		try{
		
			var objcontent=JSON.parse(content);
			
			$("input[name='general_val']").each(function(index){
				$(this).val(Object.values(objcontent)[index]);
			});

		}catch(error){
			$("input[name='general_val']").val('');
		}

    });


    $('#btn-addnew').click(function(){

		$( "input[name='id_item']" ).val(uuidv4())
		$( "#iditem" ).css("display", "none");

        $( ".gr-1" ).each(function(index){
			$(this).val('');
		});
		
		$('#form-post').attr('action','/audit-action/action');
		$("input[name='general_val']").val('');
	
	});

	function uuidv4() {
		return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
			var r = Math.random() * 16 | 0, v = c == 'x' ? r : (r & 0x3 | 0x8);
			return v.toString(16);
		});
	}

	$(document).ready(function(){

var loca="/loadajax/location";
var product="/loadajax/product";
var audit="/loadajax/auditor";

loadauditor(function(html){
	$('#location_item').html(html);
},loca);

loadauditor(function(html){
	$('#auditor_item').html(html);
},audit);

search(function(html){
	$('#type_search').html(html);
},audit);

loadauditor(function(html){
	$('#product_item').html(html);
},product);

});

