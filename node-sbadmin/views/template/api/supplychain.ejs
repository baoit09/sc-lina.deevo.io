	  $(html).insertBefore( ".end_general" );
	  show_items(_products, $('#'+ selectProductId), true);
	  $('#'+ selectProductId).val(selectedProduct);

	  products_markAsAdded_items(selectedProduct);	  
	};
	
	function del_general(id){
		
	  var i=1;

