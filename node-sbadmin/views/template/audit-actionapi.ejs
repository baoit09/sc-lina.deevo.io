<%layout('../layout')%>
<div id='page-wrapper'>
    <div class='row'>
        <div class = 'col-lg-12'>
            <h1 class = "page-header">Audit Action</h1>
        </div>
        <!--col-lg-12-->
    </div>
    <!--class row-->
    <div class='row'>
        <div class = 'col-lg-12'>
            <div class = 'panel panel-default'>
                <div class="panel panel-default">
                    
                <div class="panel-heading">
                    DataTables Advanced Tables
                    
                </div>
                <!-- /.panel-heading -->
                <div class="form-group input-group col-lg-3 move-right" >
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><i class="fa fa-search"></i>
                            </button>
                        </span>
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Rendering engine</th>
                                    <th>Browser</th>
                                    <th>Platform(s)</th>
                                    <th>Engine version</th>
                                    <th>CSS grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX">
                                    <td>Trident</td>
                                    <td>Internet Explorer 4.0</td>
                                    <td>Win 95+</td>
                                    <td class="center">4</td>
                                    <td class="center">X</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <div class = 'panel-heading'> Audit Action Element</div>
                <div class = 'panel-body'>
                    <div class = 'row'>
                        <div class = 'col-lg-6'>
                            <form role = 'form'>
                                    <div class="form-group">
                                        <label>Time</label>
                                        <input class="form-control" placeholder="Set time">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label>CTE</label>
                                        <input class="form-control" placeholder="Check-plant">
                                    </div>                        
                            </form>
                        </div> 
                        <div class = 'col-lg-6'>
                            <form role = 'form'>
                                    <div class="form-group">
                                        <label>Asset</label>
                                        <input class="form-control" placeholder="">
                                    </div>
                                    
                                    <div class="form-group">
                                        <label>Product</label>
                                        <input class="form-control" placeholder="">
                                    </div>                        
                            </form>
                        </div>      
                    </div>
                    <div style="padding: 1px">
                    <div class="form-group">
                        <label>Refer</label>
                        <input class="form-control" placeholder="...">
                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        <textarea class="form-control" rows="4"></textarea>
                    </div>
  		<div class="form-group">      
                        <div class="radio">
                            <label>
                              <input type="radio" name="optionsRadios" id="optionsRadios1" value="get" checked>Get data
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                             	<input type="radio" name="optionsRadios" id="optionsRadios2" value="post">Add new
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                              <input type="radio" name="optionsRadios" id="optionsRadios3" value="put">Edit
                            </label>
                        </div>
                </div>
                    <button type="submit" class="btn btn-default btn-upload">Submit</button>
                    </div>
                </div><!--panel-body-->
            </div><!--panel-default-->
        </div><!--col-lg-12-->
    </div>
</div>
<style>
    .btn-upload{
        background-color: rgb(146, 186, 209);
        width : 100%;
    }
    .move-right{
        top: 7px;
        right: 15px;
        float: right !important;
    }
</style>
